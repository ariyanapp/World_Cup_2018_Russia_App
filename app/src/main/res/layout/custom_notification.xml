<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TVTitle"
        android:text="Today's Match"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TVDate"
        android:textStyle="bold"
        android:text="Fri 15.05.2018 10:00 PM"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/TVMiddleText"
        android:layout_below="@id/TVDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="VS"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/TVTeam1"
        android:layout_below="@id/TVDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Russia"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/TVTeam2"
        android:layout_below="@id/TVDate"
        android:padding="5dp"
        android:text="Saudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgTeam1"
        android:layout_below="@id/TVDate"
        android:src="@drawable/ru"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/TVMiddleText"
        android:layout_toStartOf="@id/TVMiddleText"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgTeam2"
        android:layout_below="@id/TVDate"
        android:src="@drawable/sa"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/TVMiddleText"
        android:layout_toEndOf="@id/TVMiddleText"
        android:layout_centerVertical="true"/>

</RelativeLayout>